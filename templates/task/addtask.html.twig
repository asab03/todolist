  <div class="container">
    <div class="row">
      <div class="one-half column" style="margin-top: 10%">
        <h4>Add task</h4>
        <p></p>
      </div>
    </div>
    <div class='array'>
    <!-- The above form looks like this -->
    <form action="/project/{{project.getId}}/tasks/save" method="POST">
      <div class="row">
        <div class="column">
          <label for="name">Name</label>
          <input class="u-full-width input" type="text" id="name" name="name">
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="description">Description</label>
          <textarea class="u-full-width input" type="text" id="description" name="description"></textarea>
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="start_date">Start date</label>
          <input class="u-full-width input" type="date" id="start_date" name="start_date" placeholder="aaaa/mm/jj">
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="end_date">End date</label>
          <input class="u-full-width input" type="date" id="end_date" name="end_date" placeholder="aaaa/mm/jj">
        </div>
      </div>
      <a class="button button-primary" href="/task">Cancel</a>
      <input class="button-primary" type="submit" value="Save">
    </form>
    </div>
  </div>

