<body>

  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <div class="container">
    <div class="row">
      <div class="one-half column" style="margin-top: 10%">
        <h4>Edit Task</h4>
        <p></p>
      </div>
    </div>
    <div class='array'>
    <!-- The above form looks like this -->
    <form action="/project/{{project.getId}}/edit/{{task.getId}}/save" method="POST">
      <div class="row">
        <div class="column">
          <label for="name">Name</label>
          <input class="u-full-width input" type="text" id="name" name="name" value="{{task.getName}}">
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="description">Description</label>
          <input class="u-full-width input" type="text" id="description" name="description" value="{{task.getDescription}}">
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="start_date">Start date</label>
          <input class="u-full-width input" type="date" id="start_date" name="start_date" placeholder="jj/mm/aaaa" value="{{task.getStartDate|date("d M Y")}}">
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="end_date">End date</label>
          <input class="u-full-width input" type="date" id="end_date" name="end_date" placeholder="jj/mm/aaaa" value="{{task.getEndDate|date("d M Y")}}">
          
        </div>
      </div>
      
      <input class="button-primary" type="submit" value="Save">
      <a href="/project/{{project.getId}}/deleteTask/{{task.getid}}"  class="button button-primary">Delete</a>
      <a class="button button-primary" href="/project/{{ project.getId }}/tasks">Cancel</a>
    </form>
    </div>
  </div>

<!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
</body>
